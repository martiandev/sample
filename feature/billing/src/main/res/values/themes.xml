<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- fumiya text style -->
    <style name="FumiyaTextStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/noto_sans_jp_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="FumiyaTextStyleBold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/noto_sans_jp_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <!-- fumiya button style -->
    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:fontFamily">@font/futura</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

</resources>