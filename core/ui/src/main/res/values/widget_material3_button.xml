<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Material3.Button" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textColor">@color/material_button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:backgroundTint">@color/material_button_background_tint</item>
        <item name="strokeColor">@color/material_button_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Material3.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/material_button_text_color</item>
    </style>

    <style name="Material3.Button.Elevated" parent="Widget.Material3.Button.ElevatedButton" />

    <style name="Material3.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton" />

    <!-- TODO: INSERT CUSTOM HERE -->
    <style name="Material3.Button.Toggle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/material_toggle_button_text_color</item>
        <item name="android:backgroundTint">@color/material_toggle_button_background_tint</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="cornerRadius">10dp</item>
    </style>
</resources>