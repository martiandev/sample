<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeableImageView.Photo.User" parent="">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">1dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Circle</item>
    </style>

    <style name="ShapeableImageView.Photo.User.Add" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@color/green</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Circle</item>
    </style>
</resources>