            <TextView
                android:id="@+id/tv_label_about_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FumiyaTextStyle"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:layout_marginTop="40dp"
                android:text="@string/fragment_sign_up_input_label_about_terms"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout12" />

            <TextView
                android:id="@+id/tv_about_terms_required"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/linear_all_radius"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/fragment_sign_up_input_label_mandatory"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_about_terms"
                app:layout_constraintStart_toEndOf="@+id/tv_label_about_terms"
                app:layout_constraintTop_toTopOf="@+id/tv_label_about_terms" />

            <!-- app terms -->
            <TextView
                android:id="@+id/tv_app_terms"
                android:onClick="@{() -> viewModel.navigateToAppTerms()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FumiyaTextStyle"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5dp"
                android:text="@string/fragment_sign_up_input_label_app_terms"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_about_terms"
                app:underlineText="@{true}" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:tint="@color/icon_primary"
                app:layout_constraintBottom_toBottomOf="@+id/tv_app_terms"
                app:layout_constraintStart_toEndOf="@+id/tv_app_terms"
                app:layout_constraintTop_toTopOf="@+id/tv_app_terms"/>

            <!-- privacy terms -->
            <TextView
                android:id="@+id/tv_privacy"
                android:onClick="@{() -> viewModel.navigateToPrivacyPolicy()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FumiyaTextStyle"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="5dp"
                android:text="@string/fragment_sign_up_input_label_privacy"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_app_terms"
                app:underlineText="@{true}" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:tint="@color/icon_primary"
                app:layout_constraintBottom_toBottomOf="@+id/tv_privacy"
                app:layout_constraintStart_toEndOf="@+id/tv_privacy"
                app:layout_constraintTop_toTopOf="@+id/tv_privacy"/>

            <!-- checkbox agree -->
            <CheckBox
                android:id="@+id/checkbox_accept"
                style="@style/FumiyaTextStyle"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:includeFontPadding="false"
                android:onCheckedChanged="@{(compoundButton, checked) -> viewModel.onCheckedAgree(compoundButton, checked)}"
                android:text="@string/fragment_sign_up_input_label_accept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_privacy" />

            <TextView
                android:id="@+id/tv_check_box_invalid_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/FumiyaTextStyle"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:visibleGone="@{viewModel.checkAgree.hasError}"
                android:text="@string/fragment_sign_up_input_validation_invalid_agree_terms"
                android:textColor="@color/colorInputError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkbox_accept" />

            <!-- confirm  button -->
            <Button
                android:id="@+id/btn_confirm"
                style="@style/ButtonStyle"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/noto_sans_jp_regular"
                android:includeFontPadding="false"
                android:onClick="@{() -> viewModel.navigateToPreviewDetails()}"
                android:text="@string/fragment_sign_up_input_label_confirm"
                android:textFontWeight="400"
                android:textSize="16sp"
                app:cornerRadius="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_check_box_invalid_message"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
