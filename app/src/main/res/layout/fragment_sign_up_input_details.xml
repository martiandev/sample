                app:layout_constraintTop_toBottomOf="@+id/textView57">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_city"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/colorInputHint"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="@string/fragment_sign_up_input_hint_address_city"
                    android:nextFocusRight="@+id/ti_address_number"
                    android:nextFocusDown="@+id/ti_address_number"
                    android:text="@={viewModel.addressMunicipality.input}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- address number -->
            <TextView
                android:id="@+id/textView58"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_label_address_number"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout10" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout16"
                style="@style/Material3.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:visibility="visible"
                app:hintEnabled="false"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView58">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_address_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorInputHint"
                    android:background="@color/white"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:hint="@string/fragment_sign_up_input_hint_address_number"
                    android:maxLines="1"
                    android:nextFocusRight="@+id/ti_address_structure"
                    android:nextFocusDown="@+id/ti_address_structure"
                    android:text="@={viewModel.addressComplete.input}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- address structure -->
            <TextView
                android:id="@+id/textView12"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_label_address_structure"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout16" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout11"
                style="@style/Material3.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:visibility="visible"
                app:hintEnabled="false"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_address_structure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColorHint="@color/colorInputHint"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:includeFontPadding="false"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="@string/fragment_sign_up_input_hint_address_structure"
                    android:nextFocusRight="@+id/ti_phone_number"
                    android:nextFocusDown="@+id/ti_phone_number"
                    android:text="@={viewModel.addressStructure.input}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- phone number -->
            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FumiyaTextStyle"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:layout_marginTop="32dp"
                android:text="@string/fragment_sign_up_input_label_phone_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout11" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout12"
                style="@style/Material3.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView49">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColorHint="@color/colorInputHint"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:includeFontPadding="false"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:hint="@string/fragment_sign_up_input_hint_phone_number"
                    android:text="@={viewModel.phoneNumber.input}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

