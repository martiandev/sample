<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="LabelFor, Autofill">

    <data>

        <variable
            name="fragment"
            type="team.standalone.fumiya.ui.auth.signup.signupdetails.SignUpInputDetailsFragment" />

        <variable
            name="viewModel"
            type="team.standalone.fumiya.ui.auth.signup.signupdetails.SignUpInputDetailsViewModel" />

        <variable
            name="gender"
            type="team.standalone.core.common.util.ConstantUtil" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            tools:context=".ui.auth.signup.signupdetails.SignUpInputDetailsFragment">

            <TextView
                android:id="@+id/tv_header_description"
                style="@style/FumiyaTextStyleBold"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:text="@string/fragment_sign_up_input_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:contentDescription="@string/iv_steps"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_header_description"
                app:srcCompat="@drawable/ic_form_step_04" />

            <!-- nick name -->
            <TextView
                android:id="@+id/tv_label_nickname"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginTop="40dp"
                android:textFontWeight="400"
                android:text="@string/fragment_sign_up_input_label_nickname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_steps" />

            <TextView
                android:id="@+id/tv_nickname_required"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/linear_all_radius"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/fragment_sign_up_input_label_mandatory"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_nickname"
                app:layout_constraintStart_toEndOf="@+id/tv_label_nickname"
                app:layout_constraintTop_toTopOf="@+id/tv_label_nickname" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                style="@style/Material3.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_nickname">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_nick_name"
                    android:text="@={viewModel.nickName.input}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@color/white"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:nextFocusRight="@+id/ti_last_name"
                    android:nextFocusDown="@+id/ti_last_name"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_note_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="@style/FumiyaTextStyle"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:text="@string/fragment_sign_up_input_label_nickname_note"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout3"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />

            <TextView
                android:id="@+id/tv_nick_name_error"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_validation_invalid_nick_name"
                android:textColor="@color/colorInputError"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_note_nick_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_note_nick_name"
                app:visibleGone="@{viewModel.nickName.hasError}" />

            <!-- full name -->
            <TextView
                android:id="@+id/tv_label_full_name"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_label_full_name"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nick_name_error" />

            <TextView
                android:id="@+id/tv_full_name_required"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/linear_all_radius"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/fragment_sign_up_input_label_mandatory"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_label_full_name"
                app:layout_constraintStart_toEndOf="@+id/tv_label_full_name"
                app:layout_constraintTop_toTopOf="@+id/tv_label_full_name" />

            <LinearLayout
                android:id="@+id/linear_full_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_full_name">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    style="@style/Material3.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="0.5"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:includeFontPadding="false"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/noto_sans_jp_regular"
                        android:includeFontPadding="false"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColorHint="@color/colorInputHint"
                        android:hint="@string/fragment_sign_up_input_hint_last_name"
                        android:nextFocusRight="@+id/ti_first_name"
                        android:nextFocusDown="@+id/ti_first_name"
                        android:text="@={viewModel.lastName.input}"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout13"
                    style="@style/Material3.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="0.5"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:includeFontPadding="false"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/noto_sans_jp_regular"
                        android:includeFontPadding="false"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/colorInputHint"
                        android:maxLines="1"
                        android:hint="@string/fragment_sign_up_input_hint_first_name"
                        android:nextFocusRight="@+id/ti_kana_last_name"
                        android:nextFocusDown="@+id/ti_kana_last_name"
                        android:text="@={viewModel.firstName.input}"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_full_name_error"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_validation_invalid_full_name"
                android:textColor="@color/colorInputError"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/linear_full_name"
                app:layout_constraintTop_toBottomOf="@+id/linear_full_name"
                app:visibleGone="@{viewModel.lastName.hasError || viewModel.firstName.hasError }" />

            <!-- kana -->
            <TextView
                android:id="@+id/tv_label_kana_full_name"
                style="@style/FumiyaTextStyle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:text="@string/fragment_sign_up_input_label_full_name_kana"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_full_name_error" />

            <LinearLayout
                android:id="@+id/linear_kana_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:baselineAligned="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_kana_full_name">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout14"
                    style="@style/Material3.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="0.5"
                    android:includeFontPadding="false"
                    app:errorEnabled="false"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_kana_last_name"
                        android:text="@={viewModel.kanaLastName.input}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@color/white"
                        android:fontFamily="@font/noto_sans_jp_regular"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        android:nextFocusRight="@+id/ti_kana_first_name"
                        android:nextFocusDown="@+id/ti_kana_first_name" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout15"
                    style="@style/Material3.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="0.5"
                    android:includeFontPadding="false"
                    app:errorEnabled="false"
                    android:visibility="visible">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ti_kana_first_name"
                        android:text="@={viewModel.kanaFirstName.input}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/noto_sans_jp_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="14sp"
                        android:inputType="textPersonName"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- bday -->
            <TextView
                android:id="@+id/tv_label_bday"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_label_date_of_birth"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_kana_name" />

            <LinearLayout
                android:id="@+id/linear_bday"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_bday">

                <EditText
                    android:id="@+id/ed_bday_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:onClick="@{() -> viewModel.openSelectBirthdate()}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:paddingEnd="5dp"
                    android:hint="@string/fragment_sign_up_input_label_year"
                    android:paddingStart="5dp"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    app:textBirthDate="@{viewModel.birthdate.input.year}" />

                <EditText
                    android:id="@+id/ed_bday_month"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:background="@color/white"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:inputType="number"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:onClick="@{() -> viewModel.openSelectBirthdate()}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:hint="@string/fragment_sign_up_input_label_month"
                    android:textSize="14sp"
                    app:textBirthDate="@{viewModel.birthdate.input.month}" />

                <EditText
                    android:id="@+id/ed_bday_day"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:focusable="false"
                    android:background="@color/white"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:inputType="number"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:onClick="@{() -> viewModel.openSelectBirthdate()}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:hint="@string/fragment_sign_up_input_label_day"
                    app:textBirthDate="@{viewModel.birthdate.input.day}" />

            </LinearLayout>

            <!-- gender -->
            <TextView
                android:id="@+id/tv_label_gender"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_label_gender"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_bday" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_gender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_gender">

                <LinearLayout
                    android:id="@+id/linear_gender_woman"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/btn_start_radius"
                    android:backgroundTint="@{viewModel.gender == 1 ? @color/colorPrimaryDark : @color/white}"
                    android:onClick="@{() -> viewModel.selectGenderWoman()}"
                    app:layout_constraintEnd_toStartOf="@+id/linear_gender_man"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/fragment_sign_up_input_gender_woman"
                        android:textColor="@{viewModel.gender == gender.GENDER_FEMALE ? @color/white : @color/colorPrimary}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gender_man"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@color/white"
                    android:backgroundTint="@{viewModel.gender == 2 ? @color/colorPrimaryDark : @color/white}"
                    android:onClick="@{() -> viewModel.selectGenderMan()}"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/linear_gender_other"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/linear_gender_woman"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/fragment_sign_up_input_gender_man"
                        android:textColor="@{viewModel.gender == gender.GENDER_MALE ? @color/white : @color/colorPrimary}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_gender_other"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/btn_end_radius"
                    android:backgroundTint="@{viewModel.gender == 3 ? @color/colorPrimaryDark : @color/white}"
                    android:onClick="@{() -> viewModel.selectGenderOther()}"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/linear_gender_man"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/fragment_sign_up_input_gender_other"
                        android:textColor="@{viewModel.gender == gender.GENDER_UNANSWERED ? @color/white : @color/colorPrimary}" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- note address -->
            <TextView
                android:id="@+id/tv_note_address"
                style="@style/FumiyaTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/textview_border"
                android:includeFontPadding="false"
                android:padding="15dp"
                android:text="@string/fragment_sign_up_input_note_address"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_gender" />

            <!-- postal -->
            <TextView
                android:id="@+id/textView55"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_label_postal_code"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_note_address" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout7"
                style="@style/Material3.TextInputLayout"
                android:layout_width="180dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView55">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ti_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColorHint="@color/colorInputHint"
                    android:hint="@string/fragment_sign_up_input_hint_postal"
                    android:fontFamily="@font/noto_sans_jp_regular"
                    android:includeFontPadding="false"
                    android:inputType="number"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:text="@={viewModel.postalCode.input}"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- address prefecture -->
            <TextView
                android:id="@+id/textView56"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:includeFontPadding="false"
                android:text="@string/fragment_sign_up_input_label_address_prefecture"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout7" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutAddressPrefecture"
                style="@style/Material3.TextInputLayout.DropDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintEnabled="false"
                android:layout_marginTop="5dp"
                app:hintAnimationEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView56">

                <team.standalone.core.ui.custom.ExposedDropdownMenu
                    android:id="@+id/sp_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:inputType="none"
                    android:padding="4dp"
                    android:textColorHint="@color/colorInputHint"
                    android:hint="@string/fragment_sign_up_input_hint_address_prefecture"
                    android:textColor="@color/black"
                    app:selectedText="@{viewModel.addressPrefecture.input}" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- address city -->
            <TextView
                android:id="@+id/textView57"
                style="@style/FumiyaTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginTop="32dp"
                android:text="@string/fragment_sign_up_input_label_address_city"
